<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/nowCardStyle"
        android:minHeight="130dp"
        >

    <ImageView
            android:id="@+id/img_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:layout_weight="1"
            android:src="@drawable/task_img"
            />

    <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <TextView

                android:id="@+id/task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:text="Task Name"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_marginBottom="3dp"
                />

        <TextView
                android:id="@+id/task_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_margin="3dp"
                android:textSize="17dp"
                android:text="Start date : 12:48 Mar 23, 2014\nDue date : 17:30 Mar 27, 2014\nPoints : \nImplement new class interfaces\nNot Done"
                />

    </LinearLayout>


    <CheckBox
            android:id="@+id/task_checkbox_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Not confirmed"
            android:textSize="18dp"
            android:textAlignment="textStart"
            android:layout_weight="2"
            />

</LinearLayout>