<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/nowCardStyle"
        android:minHeight="170dp"
        android:background="@drawable/blue_vacation_desktop"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:orientation="horizontal"
            >


        <ImageView
                android:id="@+id/img_photo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/hello_world"
                android:layout_weight="1"
                android:src="@drawable/company"
                />

        <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

            <TextView

                    android:id="@+id/compny_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28dp"
                    android:text="Grammarly"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:layout_marginBottom="3dp"
                    />

            <TextView
                    android:id="@+id/company_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_margin="3dp"
                    android:textSize="22dp"
                    android:text="Creator: Alex Shevchenko\nTasks : 27"

                    />
        </LinearLayout>
    </LinearLayout>


    <TextView

            android:id="@+id/company_description_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_margin="3dp"
            android:layout_marginLeft="10dp"
            android:textSize="22dp"
            android:textStyle="italic"
            android:text="Grammarly is a writing-enhancement platform developed by Grammarly, Inc., and launched in 2009. Grammarly's proofreading and plagiarism-detection capabilities check for a writer's adherence to more than 250 grammar rules"

            />


</LinearLayout>