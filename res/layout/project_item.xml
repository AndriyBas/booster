<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/nowCardStyle"
        android:minHeight="130dp"

        android:onClick="onProjectClick"

        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


        <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="2dp"
                >

            <TextView

                    android:id="@+id/project_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:text="Project Name"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:layout_marginBottom="3dp"
                    />

            <TextView
                    android:id="@+id/task_description"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:padding="2dp"
                    android:layout_margin="3dp"
                    android:textSize="17dp"
                    android:text="The aim of dynamic reconfiguration is to allow a system to evolve at run-time, as opposed to design-time, while introducing little (or ideally minimal) impact on the systemâ€™s execution. In this way, systems do not have to be taken off-line, rebooted or restarted to accommodate changes. "
                    />


            <ProgressBar
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/project_progressBar"
                    android:layout_gravity="center_horizontal"
                    android:clickable="false"
                    android:max="100"
                    android:minHeight="30dp"
                    android:progress="75"
                    android:layout_weight="3"
                    android:layout_margin="2dp"
                    />

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center"
                >

            <ImageView
                    android:id="@+id/img_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_world"
                    android:layout_weight="1"
                    android:src="@drawable/project_plan"
                    />


            <Button
                    android:id="@+id/project_employees_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="Employees"
                    android:drawableLeft="@drawable/emploees_icon"
                    android:layout_margin="2dp"
                    />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>